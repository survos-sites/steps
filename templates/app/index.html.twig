{% extends 'base.html.twig' %}

{% block title %}Castor Slideshows{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>üìΩÔ∏è Available Slideshows</h1>
    <p class="lead">Select a slideshow to view the presentation</p>
    
    {% if slideshows is empty %}
        <div class="alert alert-info">
            <h4>No Slideshows Found</h4>
            <p>Create a file named <code>*.castor.php</code> in your project root directory.</p>
            <p>Example: <code>demo-slideshow.castor.php</code></p>
        </div>
    {% else %}
        {% for slideshow in slideshows %}
            <div class="card mb-4">
                <div class="card-header">
                    <h3>{{ slideshow.filename }}</h3>
                    <small class="text-muted">{{ slideshow.filepath }}</small>
                </div>
                <div class="card-body">
                    <h5>Tasks in this slideshow:</h5>
                    <div class="list-group">
                        {% for task in slideshow.tasks %}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">
                                            <code>{{ task.name }}</code> - {{ task.title }}
                                        </h6>
                                        {% if task.description %}
                                            <p class="mb-1 text-muted">{{ task.description }}</p>
                                        {% endif %}
                                        {% if task.bullets %}
                                            <ul class="small">
                                                {% for bullet in task.bullets %}
                                                    <li>{{ bullet }}</li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    
                    <div class="mt-3">
                        <a href="{{ path('app_slides', {code: slideshow.filename}) }}" 
                           class="btn btn-primary btn-lg">
                            üé¨ View Slideshow
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    
    <hr class="my-5">
    
    <div class="card">
        <div class="card-header">
            <h4>üìö How to Create a Slideshow</h4>
        </div>
        <div class="card-body">
            <ol>
                <li>Create a file named <code>your-name.castor.php</code> in the project root</li>
                <li>Define tasks with <code>#[AsTask()]</code> and <code>#[Slide()]</code> attributes</li>
                <li>Refresh this page to see your slideshow</li>
            </ol>
            
            <h5 class="mt-3">Example:</h5>
            <pre><code class="language-php">&lt;?php

use Castor\Attribute\AsTask;

#[\Attribute(\Attribute::TARGET_FUNCTION)]
class Slide {
    public function __construct(
        public string $title,
        public string $description = '',
        public array $bullets = [],
    ) {}
}

#[AsTask(name: '1-hello', description: 'Say Hello')]
#[Slide(
    title: 'Hello World',
    description: 'My first slide',
    bullets: ['Point 1', 'Point 2']
)]
function hello(): void
{
    // Your code here
}
</code></pre>
        </div>
    </div>
</div>

<style>
    .card {
        border-left: 4px solid #007bff;
    }
    .list-group-item {
        border-left: 3px solid #28a745;
    }
    code {
        background: #f4f4f4;
        padding: 2px 6px;
        border-radius: 3px;
    }
</style>
{% endblock %}
